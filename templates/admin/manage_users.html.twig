{% extends 'base.html.twig' %}

{% block title %}Manage Users{% endblock %}

{% block body %}
    <div class="profile-wrapper">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h2 class="h4 mb-0">Manage Users</h2>
                <form class="d-flex" method="get" action="{{ path('admin_users') }}">
                    <input type="text" name="search" value="{{ searchTerm }}" class="form-control" placeholder="Search users...">
                    <button type="submit" class="btn btn-light ms-2">Search</button>
                </form>
            </div>
            
            <div class="card-body p-0">
                {% if users is empty %}
                    <div class="no-results m-4">
                        <h2>No Users Found</h2>
                    </div>
                {% else %}
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Actions</th>
                            </tr>
                        </thead>    
                        <tbody>
                            {% for user in users %}
                                <tr>
                                    <td><a href="{{ path('app_public_profile', { username: user.username }) }}">{{ user.username }}</a></td>
                                    <td>
                                        <button type="button" class="btn btn-danger" onclick="window.location.href='{{ path('admin_delete_user', { id: user.id }) }}'; return confirm('Are you sure you want to delete this user?');">Delete</button>
                                        {% if app.user and 'ROLE_ADMIN' in app.user.roles %}
                                            <button type="button" class="btn btn-warning" onclick="window.location.href='{{ path('admin_make_user_mod', { id: user.id }) }}'; return confirm('Are you sure you want to make this user a moderator?');">Make moderator</button>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %} 